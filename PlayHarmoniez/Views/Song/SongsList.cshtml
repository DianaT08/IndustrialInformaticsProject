@model List<PlayHarmoniez.Models.Song>

<!-- Sidebar/menu -->
@await Html.PartialAsync("~/Views/Shared/_Navbar_Admin.cshtml");
<a href="AddSong" class="btn btn-primary btn-lg" style="margin-left:20%;margin-bottom:40px;margin-top:40px">Would you like to add a song?</a>
@foreach(var song in Model)
{
    <div class="card text-white bg-info mb-3" style="max-width: 22rem;margin-left:20%">
        <div class="card-header"> </div>
        <div class="card-body">
            <h5 class="card-title">
                <img src=@song.ImageFile.ToString() style="width:200px;height:200px;">
            </h5>
            <h5 class="card-title">Title : @song.Title</h5>
            <h5 class="card-title">Author : @song.Author</h5>
	        <h5 class="card-title">Publish Date @song.PublishData.ToString("yyyy-mm-dd")</h5>
            <p class="card-text"> Description : @song.Description</p>
            <audio controls>
                <source src=@song.SoundFile.ToString() type="audio/mpeg">
                Your browser does not support the audio element.
            </audio>
        </div>
    </div>
}


