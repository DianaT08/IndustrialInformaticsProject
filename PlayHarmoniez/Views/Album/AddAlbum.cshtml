@model Album
<!-- Sidebar/menu -->
@await Html.PartialAsync("~/Views/Shared/_Navbar_Admin.cshtml");
<div style="margin-left:20%">
<h1> Add Album </h1>
<form method="post" action="AddAlbum" class="mt-5" enctype="multipart/form-data">
	<div class = "mb-3">
		<label for="" class="form-label">Name</label>
		<input type="text" class="form-control" asp-for="@Model.AlbumName"/>
	</div>
	<div class="mb-3">
		<label for="" class="form-label">Author</label>
		<input type="text" class="form-control" asp-for="@Model.AlbumAuthor" />
	</div>
	<div class="mb-3">
		<label for="" class="form-label">Release date</label>
		<input type="date" class="form-control" asp-for="@Model.AlbumRelease" />
	</div>
	<div class="mb-3">
		<label for="" class="form-label">Description</label>
		<input type="text" class="form-control" asp-for="@Model.AlbumDescription" />
	</div>
	<div class="mb-3">
		<label for="" class="form-label">Image file</label>
		<input type="file" name = "imageFile" class="form-control" asp-for="@Model.ImageFile" />
	</div>
	<button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>